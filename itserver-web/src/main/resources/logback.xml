<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_HOME" value="/Users/logs" />

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="logImpl" level="DEBUG">-->
    <!--<appender-ref ref="STDOUT"/>-->
    <!--</logger>-->

    <logger name="org.apache.ibatis" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="java.sql" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- 按照每天生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/itserver.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd} %d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <level value="error" />
        <level value="info" />
        <!--<level value="debug" />-->
        <appender-ref ref="STDOUT" />
    </root>
</configuration>

